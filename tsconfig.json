{
	"compilerOptions": {
		"target": "ESNext",
		"module": "commonjs",
		"declaration": true,
		"outDir": "./dist",
		"noEmit": false,
		"strict": true,
		"moduleResolution": "node",
		"typeRoots": [
			"./node_modules/@types",
			"./types"
		],
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
	},
	"exclude": ["node_modules", "./dist"],
	"include": ["src/**/*"]
}
